<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
		font-weight: bold;
		}
	</ui:style>
	<ui:with field='res' type='hu.mygame.client.resources.Resources' />

	<g:DialogBox ui:field="dialog" text="Promotion!" modal="true"
		autoHideEnabled="false" title="">
		<g:VerticalPanel>
			<g:Label ui:field="label" text="Please select one piece:" />
			<g:HorizontalPanel>
				<g:PushButton ui:field="button_queen">
					<g:upFace image="{res.white_queen}" />
					<g:downFace image="{res.white_queen}" />
				</g:PushButton>
				<g:PushButton ui:field="button_rook">
					<g:upFace image="{res.white_rook}" />
					<g:downFace image="{res.white_rook}" />
				</g:PushButton>
				<g:PushButton ui:field="button_knight">
					<g:upFace image="{res.white_knight}" />
					<g:downFace image="{res.white_knight}" />
				</g:PushButton>
				<g:PushButton ui:field="button_bishop">
					<g:upFace image="{res.white_bishop}" />
					<g:downFace image="{res.white_bishop}" />
				</g:PushButton>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
</ui:UiBinder> 