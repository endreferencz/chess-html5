<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:PopupPanel width="200px">
		<g:VerticalPanel>
			<g:Label ui:field="playerName" />
			<g:Label ui:field="score" />
			<g:HorizontalPanel>
				<g:Button ui:field="inviteButton" width="50px" text="Invite" />
				<g:Label ui:field="invitationState" />
				<g:Label ui:field="onlineState" />
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:PopupPanel>
</ui:UiBinder> 